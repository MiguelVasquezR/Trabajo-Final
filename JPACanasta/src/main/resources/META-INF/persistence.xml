<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
      <mapping-file>CategoriaEntity.xml</mapping-file>
      <mapping-file>ClienteEntity.xml</mapping-file>
      <mapping-file>CompraVentaEntity.xml</mapping-file>
      <mapping-file>DireccionEntity.xml</mapping-file>
      <mapping-file>PersonaEntity.xml</mapping-file>
      <mapping-file>ProductoEntity.xml</mapping-file>
      <mapping-file>ProveedorEntity.xml</mapping-file>
      <mapping-file>UsuarioEntity.xml</mapping-file>
      <mapping-file>ProductosEntity.xml</mapping-file>

      <class>Modelo.CategoriaEntity</class>
      <class>Modelo.ClienteEntity</class>
      <class>Modelo.CompraVentaEntity</class>
      <class>Modelo.DireccionEntity</class>
      <class>Modelo.PersonaEntity</class>
      <class>Modelo.ProductoEntity</class>
      <class>Modelo.ProveedorEntity</class>
      <class>Modelo.UsuarioEntity</class>
      <class>Modelo.ProductosEntity</class>
      <properties>
          <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/canastabd"/>
          <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
          <property name="toplink.jdbc.user" value="root"/>
          <property name="toplink.jdbc.password" value="FormulaUno"/>
          <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/canastabd"/>
          <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
          <property name="hibernate.connection.username" value="root"/>
          <property name="hibernate.connection.password" value="FormulaUno"/>
          <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/canastabd"/>
          <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
          <property name="openjpa.ConnectionUserName" value="root"/>
          <property name="openjpa.ConnectionPassword" value="FormulaUno"/>
          <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/canastabd"/>
          <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
          <property name="eclipselink.jdbc.user" value="root"/>
          <property name="eclipselink.jdbc.password" value="FormulaUno"/>
      </properties>
  </persistence-unit>
</persistence>
